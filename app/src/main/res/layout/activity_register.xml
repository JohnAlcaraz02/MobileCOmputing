<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#0D0066">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top Section with Form -->
            <LinearLayout
                android:id="@+id/topSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:paddingHorizontal="28dp"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"
                android:background="@drawable/rounded_bottom_bg">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/imageRegisterLogo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/app_logo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_logo_small" />

                <!-- Sign Up Title -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.05"
                    android:text="SIGN UP"
                    android:textColor="#0D0066"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/textSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Register your account to grab exclusive service\nand assistance from CICS - Student Council."
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <!-- SR-CODE Input with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/input_rounded_background_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="18dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="14dp"
                        android:contentDescription="User icon"
                        android:src="@drawable/ic_person"
                        app:tint="#0D0066" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputFullName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="SR-CODE or Employee ID"
                        android:inputType="text"
                        android:padding="0dp"
                        android:textColor="#0D0066"
                        android:textColorHint="#AAAAAA"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- G-suite Account Input with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/input_rounded_background_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="18dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="14dp"
                        android:contentDescription="Email icon"
                        android:src="@drawable/ic_email"
                        app:tint="#0D0066" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="G-suite Account"
                        android:inputType="textEmailAddress"
                        android:padding="0dp"
                        android:textColor="#0D0066"
                        android:textColorHint="#AAAAAA"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Password Input with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/input_rounded_background_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="18dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="14dp"
                        android:contentDescription="Lock icon"
                        android:src="@drawable/ic_lock"
                        app:tint="#0D0066" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="0dp"
                        android:textColor="#0D0066"
                        android:textColorHint="#AAAAAA"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btnTogglePassword"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="Toggle password visibility"
                        android:src="@drawable/ic_eye_hidden"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="#757575" />

                </LinearLayout>

                <!-- Confirm Password Input with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/input_rounded_background_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="18dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="14dp"
                        android:contentDescription="Lock icon"
                        android:src="@drawable/ic_lock"
                        app:tint="#0D0066" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputConfirmPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:padding="0dp"
                        android:textColor="#0D0066"
                        android:textColorHint="#AAAAAA"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btnToggleConfirmPassword"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="Toggle confirm password visibility"
                        android:src="@drawable/ic_eye_hidden"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="#757575" />

                </LinearLayout>

                <!-- Register Button -->
                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#0D0066"
                    android:text="REGISTER"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="32dp" />

                <!-- Or Login With -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="Or Login With"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <!-- Google Sign In Button -->
                <LinearLayout
                    android:id="@+id/buttonGoogleSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/google_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="40dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Google icon"
                        android:src="@drawable/ic_google" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google Account"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Login Link -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?  "
                        android:textColor="#333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Login"
                        android:textColor="#0D0066"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Bottom Purple Section -->
            <RelativeLayout
                android:id="@+id/bottomSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topSection"
                android:layout_alignParentBottom="true"
                android:minHeight="240dp"
                android:background="#0D0066"
                android:paddingBottom="48dp">

                <!-- Bottom Logo - Positioned to overlap the top edge -->
                <ImageView
                    android:id="@+id/bottomLogo"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/ic_logo_3d"
                    android:contentDescription="@string/app_logo" />

                <!-- Text Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bottomLogo"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="16dp">

                    <!-- Bottom Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACICSTANCE CORNER"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The CICS Student Support Hub"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>