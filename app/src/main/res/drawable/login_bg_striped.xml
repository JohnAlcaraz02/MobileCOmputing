<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base background with alternating gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#D4E8F5"
                android:centerColor="#FFE0E8"
                android:endColor="#D4E8F5"
                android:type="linear" />
        </shape>
    </item>

    <!-- Overlay to create striped effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#CCE5F5"
                android:centerColor="#00000000"
                android:endColor="#CCE5F5"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
